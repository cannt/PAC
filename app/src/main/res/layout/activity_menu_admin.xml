<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Menu.MenuAdmin">

    <ProgressBar
        android:id="@+id/cargandoAdmin"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.516"
        android:elevation="10dp" tools:targetApi="lollipop"/>

    <Button
        android:id="@+id/btnRegistrarJornadas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="12dp"
        android:text="@string/btnRegistrarJornadas"
        app:layout_constraintBottom_toTopOf="@+id/btnObras"
        app:layout_constraintEnd_toEndOf="@+id/logoAdmin"
        app:layout_constraintTop_toBottomOf="@+id/logoAdmin" />

    <Button
        android:id="@+id/btnObras"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="13dp"
        android:text="@string/btnObras"
        app:layout_constraintBottom_toTopOf="@+id/btnAdmEmpleados"
        app:layout_constraintStart_toStartOf="@+id/btnRegistrarJornadas"
        app:layout_constraintTop_toBottomOf="@+id/btnRegistrarJornadas" />

    <Button
        android:id="@+id/btnCerrar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="@string/btnCerrar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/aproxad" />

    <Button
        android:id="@+id/btnAdmEmpleados"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="11dp"
        android:text="@string/btnEmpleados"
        app:layout_constraintBottom_toTopOf="@+id/btnVacaciones"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnObras" />

    <Button
        android:id="@+id/pdfVer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="46dp"
        android:text="@string/btnRegistroPdf"
        app:layout_constraintBottom_toTopOf="@+id/aproxad"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnVacaciones" />

    <Button
        android:id="@+id/btnVacaciones"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="11dp"
        android:text="@string/btnVaca"
        app:layout_constraintBottom_toTopOf="@+id/pdfVer"
        app:layout_constraintEnd_toEndOf="@+id/btnAdmEmpleados"
        app:layout_constraintTop_toBottomOf="@+id/btnAdmEmpleados" />

    <ImageView
        android:id="@+id/logoAdmin"
        android:layout_width="200dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:contentDescription="@string/logo"
        app:layout_constraintBottom_toTopOf="@+id/btnRegistrarJornadas"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/PrivacyPolicy"
        app:srcCompat="@drawable/ic_logo" />


    <TextView
        android:id="@+id/PrivacyPolicy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="25dp"
        android:clickable="true"
        android:focusable="true"
        android:text="@string/politicaDePrivacidad"
        android:textColorLink="@color/colorAccent"
        app:layout_constraintBottom_toTopOf="@+id/logoAdmin"
        app:layout_constraintStart_toStartOf="@+id/logoAdmin"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/aproxad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="47dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/btnCerrar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pdfVer" />

</androidx.constraintlayout.widget.ConstraintLayout>