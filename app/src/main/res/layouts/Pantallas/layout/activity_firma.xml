<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:saveEnabled="false"
    android:windowSoftInputMode="adjustPan">

    <ProgressBar
        android:id="@+id/progressbar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:indeterminate="true"
        android:indeterminateTint="#FFFFFF"
        android:max="100"
        android:progress="25"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/btnBorrarCon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.github.gcacace.signaturepad.views.SignaturePad
        android:id="@+id/firmaCon"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:penColor="@android:color/black"
        app:penMaxWidth="4dp"
        app:penMinWidth="2dp"
        tools:layout_editor_absoluteX="25dp"
        tools:layout_editor_absoluteY="94dp" />

    <Button
        android:id="@+id/btnFirmarCon"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        android:text="@string/btnFirmar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/firmaCon"
        app:layout_constraintVertical_bias="1.0"
        android:background="#01407B"
        android:textColor="#FFFFFF"/>

    <Button
        android:id="@+id/btnBorrarCon"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="@string/btnBorrar"
        app:layout_constraintBottom_toBottomOf="@+id/firmaCon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.023"
        android:background="#01407B"
        android:textColor="#FFFFFF"/>

    <View
        android:id="@+id/viewGrey"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#B0000000"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
